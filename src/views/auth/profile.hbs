<div class="container p-4">
    <div class="row justify-content-md-center align-items-center">
        <div class="col col-md-4">
            <div class="card text-center rounded-pill">
                <div class="card-header mt-2">
                    <span class="h4">Profile</span>
                </div>
                <div class="card-body">
                    <h3>Welcome {{user.username}}</h3>
                    <hr>
                    <p>Full name: <span class="text-muted">{{user.fullname}}</span></p>
                    <p>Email: <span class="text-muted">{{user.email}}</span></p>
                    <buttontype="button" data-bs-toggle="modal" data-bs-target="#editProfile{{user.id}}" class="btn btn-dark mt-4 rounded-pill">
                        <i class="fas fa-edit"></i> Edit account
                    </buttontype=>
                </div>
            </div>
        </div>
    </div>
</div>

{{>userComponents/authModals/edit}}