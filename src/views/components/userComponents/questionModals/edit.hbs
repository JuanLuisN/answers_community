<div class="modal fade" id="editQuestion{{id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">EDIT QUESTION</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/myquestions/edit/{{id}}" method="POST">
                    <div class="mb-3 pe-2">
                        <label for="">Question:</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fas fa-question-circle"></i>
                            </span>
                            <input type="text" value="{{question}}" name="question" placeholder="Question"
                                class="form-control" required>
                        </div>
                    </div>
                    <div class="mb-3 pe-2">
                        <label for="">Description:</label>
                        <div class="input-group">
                            <textarea type="text" name="description" placeholder="Description" cols="30" rows="10"
                                class="form-control" required>{{description}}</textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-dark">Save changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>