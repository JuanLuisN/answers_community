<div class="modal fade" id="editProfile{{user.id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">EDIT PROFILE</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/profile/edit" method="POST">
                    <div class="mb-3 pe-2">
                        <label for="">Username:</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fas fa-user-tag"></i>
                            </span>
                            <input type="text" name="username" placeholder="Username" class="form-control" required>
                        </div>
                    </div>
                    <div class="mb-3 pe-2">
                        <label for="">Full name:</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fas fa-signature"></i>
                            </span>
                            <input type="text" name="fullname" placeholder="Full name" class="form-control" required>
                        </div>
                    </div>
                    <div class="mb-3 pe-2">
                        <label for="">Email:</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fas fa-envelope"></i>
                            </span>
                            <input type="email" name="email" placeholder="Email" class="form-control" required>
                        </div>
                    </div>
                    <div class="mb-3 pe-2">
                        <label for="">Password:</label>
                        <label class="text-danger d-none" id="higherPass"><small><i
                                    class="fas fa-exclamation-circle"></i>
                                The password must be greater than 8 characters.</small></label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fas fa-key"></i>
                            </span>
                            <input type="password" id="password" name="password" placeholder="Password"
                                class="form-control" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-dark">Save changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    const password = document.getElementById("password")
    const btnsave = document.getElementById("btnsave")

    btnsave = addEventListener("input", () => {
        if (password.value.length < 8) {
            higherPass.classList.remove("d-none")
            btnsave.disabled = true
        } else {
            higherPass.classList.add("d-none")
            btnsave.disabled = false
        }
    })
</script>